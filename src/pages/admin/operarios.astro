---
import AdminLayout from '../../layouts/AdminLayout.astro';
import OperariosSection from '../../components/sections/OperariosSection.astro';
---

<AdminLayout title="Operarios" activeSection="operarios">
  <OperariosSection />
</AdminLayout>

<style>
  .operarios-content {
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 400px;
  }

  .content-placeholder {
    text-align: center;
    max-width: 400px;
    padding: 48px 24px;
  }

  .placeholder-icon {
    margin: 0 auto 24px;
    color: #9ca3af;
  }

  .content-placeholder h3 {
    font-size: 24px;
    font-weight: 600;
    color: #111827;
    margin-bottom: 12px;
  }

  .content-placeholder p {
    color: #6b7280;
    line-height: 1.6;
  }
</style>