    text-align: center;
    max-width: 400px;
    padding: 48px 24px;
  }

  .placeholder-icon {
    margin: 0 auto 24px;
    color: #9ca3af;
  }

  .content-placeholder h3 {
    font-size: 24px;
    font-weight: 600;
    color: #111827;
    margin-bottom: 12px;
  }

  .content-placeholder p {
    color: #6b7280;
