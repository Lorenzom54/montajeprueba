---
import AdminLayout from '../../layouts/AdminLayout.astro';
import PageHeader from '../../components/PageHeader.astro';
---

<AdminLayout title="Accesos" activeSection="accesos">
  <PageHeader 
    title="Control de Accesos" 
    subtitle="Gestión de permisos y seguridad del sistema"
    actionButton={{ text: "Nuevo Usuario", href: "#" }}
  />

  <div class="accesos-content">
    <div class="content-placeholder">
      <div class="placeholder-icon">
        <svg width="64" height="64" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z" />
        </svg>
      </div>
      <h3>Sección de Accesos</h3>
      <p>Control de usuarios, roles y permisos de acceso al sistema.</p>
    </div>
  </div>
</AdminLayout>

<style>
  .accesos-content {
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 400px;
  }

  .content-placeholder {
    text-align: center;
    max-width: 400px;
    padding: 48px 24px;
  }

  .placeholder-icon {
    margin: 0 auto 24px;
    color: #9ca3af;
  }

  .content-placeholder h3 {
    font-size: 24px;
    font-weight: 600;
    color: #111827;
    margin-bottom: 12px;
  }

  .content-placeholder p {
    color: #6b7280;
    line-height: 1.6;
  }
</style>