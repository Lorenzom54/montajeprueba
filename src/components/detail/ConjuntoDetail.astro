---
interface Props {
  conjunto: {
    id: string;
    nombre: string;
    obra: string;
    estado: string;
    prioridad: string;
    numPiezas: number;
    fechaInicio: string;
    fechaEntrega: string;
    pesoTotal: number;
    responsable: string;
    supervisorCalidad: string;
    costo: number;
    horasTrabajo: number;
    descripcion: string;
    especificaciones: string;
    progreso: number;
  };
}

const { conjunto } = Astro.props;
---

<div slot="general" class="detail-content">
  <div class="detail-grid">
    <div class="detail-section">
      <h3 class="section-title">Información del Conjunto</h3>
      <div class="info-grid">
        <div class="info-item">
          <label class="info-label">Nombre del Conjunto</label>
          <div class="info-value editable" data-field="nombre">{conjunto.nombre}</div>
        </div>
        <div class="info-item">
          <label class="info-label">Obra</label>
          <div class="info-value editable" data-field="obra">{conjunto.obra}</div>
        </div>
        <div class="info-item">
          <label class="info-label">Estado</label>
          <div class="info-value">
            <span class={`status-badge ${conjunto.estado.toLowerCase().replace(' ', '-')}`}>
              {conjunto.estado}
            </span>
          </div>
        </div>
        <div class="info-item">
          <label class="info-label">Prioridad</label>
          <div class="info-value">
            <span class={`priority-badge ${conjunto.prioridad.toLowerCase()}`}>
              {conjunto.prioridad}
            </span>
          </div>
        </div>
      </div>
    </div>

    <div class="detail-section">
      <h3 class="section-title">Métricas del Proyecto</h3>
      <div class="info-grid">
        <div class="info-item">
          <label class="info-label">Número de Piezas</label>
          <div class="info-value editable" data-field="numPiezas">{conjunto.numPiezas}</div>
        </div>
        <div class="info-item">
          <label class="info-label">Peso Total (kg)</label>
          <div class="info-value editable" data-field="pesoTotal">{conjunto.pesoTotal.toLocaleString()}</div>
        </div>
        <div class="info-item">
          <label class="info-label">Costo Estimado (€)</label>
          <div class="info-value editable" data-field="costo">€{conjunto.costo.toLocaleString()}</div>
        </div>
        <div class="info-item">
          <label class="info-label">Horas de Trabajo</label>
          <div class="info-value editable" data-field="horasTrabajo">{conjunto.horasTrabajo}h</div>
        </div>
      </div>
    </div>

    <div class="detail-section full-width">
      <h3 class="section-title">Fechas y Responsables</h3>
      <div class="info-grid">
        <div class="info-item">
          <label class="info-label">Fecha de Inicio</label>
          <div class="info-value editable" data-field="fechaInicio">{conjunto.fechaInicio}</div>
        </div>
        <div class="info-item">
          <label class="info-label">Fecha de Entrega</label>
          <div class="info-value editable" data-field="fechaEntrega">{conjunto.fechaEntrega}</div>
        </div>
        <div class="info-item">
          <label class="info-label">Responsable de Producción</label>
          <div class="info-value editable" data-field="responsable">{conjunto.responsable}</div>
        </div>
        <div class="info-item">
          <label class="info-label">Supervisor de Calidad</label>
          <div class="info-value editable" data-field="supervisorCalidad">{conjunto.supervisorCalidad}</div>
        </div>
      </div>
    </div>

    <div class="detail-section full-width">
      <h3 class="section-title">Descripción</h3>
      <div class="info-item">
        <div class="info-value editable" data-field="descripcion">{conjunto.descripcion}</div>
      </div>
    </div>

    <div class="detail-section full-width">
      <h3 class="section-title">Especificaciones Técnicas</h3>
      <div class="info-item">
        <div class="info-value editable" data-field="especificaciones">{conjunto.especificaciones}</div>
      </div>
    </div>
  </div>
</div>

<div slot="progress" class="detail-content">
  <div class="progress-section">
    <h3 class="section-title">Estado del Conjunto</h3>
    
    <div class="progress-overview">
      <div class="progress-card">
        <div class="progress-icon completed">
          <svg width="24" height="24" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
          </svg>
        </div>
        <div class="progress-details">
          <span class="progress-number">18</span>
          <span class="progress-label">Piezas Completadas</span>
        </div>
      </div>
      
      <div class="progress-card">
        <div class="progress-icon in-progress">
          <svg width="24" height="24" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
        <div class="progress-details">
          <span class="progress-number">4</span>
          <span class="progress-label">En Fabricación</span>
        </div>
      </div>
      
      <div class="progress-card">
        <div class="progress-icon pending">
          <svg width="24" height="24" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
        <div class="progress-details">
          <span class="progress-number">2</span>
          <span class="progress-label">Pendientes</span>
        </div>
      </div>
    </div>

    <div class="pieces-list">
      <h4 class="pieces-title">Piezas del Conjunto</h4>
      <div class="pieces-grid">
        <div class="piece-item">
          <div class="piece-info">
            <strong>Viga Principal VP-001</strong>
            <span class="piece-status completed">Completada</span>
          </div>
          <div class="piece-progress">100%</div>
        </div>
        <div class="piece-item">
          <div class="piece-info">
            <strong>Viga Secundaria VS-002</strong>
            <span class="piece-status in-progress">En Fabricación</span>
          </div>
          <div class="piece-progress">75%</div>
        </div>
        <div class="piece-item">
          <div class="piece-info">
            <strong>Columna Central CC-003</strong>
            <span class="piece-status pending">Pendiente</span>
          </div>
          <div class="piece-progress">0%</div>
        </div>
      </div>
    </div>
  </div>
</div>

<div slot="history" class="detail-content">
  <div class="history-section">
    <h3 class="section-title">Historial del Conjunto</h3>
    
    <div class="history-items">
      <div class="history-item">
        <div class="history-avatar">JM</div>
        <div class="history-content">
          <div class="history-header">
            <strong>José Martínez</strong>
            <span class="history-action">completó pieza</span>
            <span class="history-time">hace 3 horas</span>
          </div>
          <p class="history-description">Finalizó la fabricación de Viga Principal VP-001</p>
        </div>
      </div>
      
      <div class="history-item">
        <div class="history-avatar">AL</div>
        <div class="history-content">
          <div class="history-header">
            <strong>Ana López</strong>
            <span class="history-action">inició fabricación</span>
            <span class="history-time">ayer</span>
          </div>
          <p class="history-description">Comenzó el trabajo en Viga Secundaria VS-002</p>
        </div>
      </div>
      
      <div class="history-item">
        <div class="history-avatar">MR</div>
        <div class="history-content">
          <div class="history-header">
            <strong>María Rodríguez</strong>
            <span class="history-action">aprobó diseño</span>
            <span class="history-time">hace 3 días</span>
          </div>
          <p class="history-description">Validó las especificaciones técnicas del conjunto</p>
        </div>
      </div>
    </div>
  </div>
</div>

<div slot="files" class="detail-content">
  <div class="files-section">
    <h3 class="section-title">Documentos del Conjunto</h3>
    
    <div class="files-upload">
      <button class="btn-upload">
        <svg width="16" height="16" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12" />
        </svg>
        Subir Archivo
      </button>
    </div>

    <div class="files-list">
      <div class="file-item">
        <div class="file-icon pdf">
          <svg width="20" height="20" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
          </svg>
        </div>
        <div class="file-details">
          <span class="file-name">Especificaciones_Conjunto.pdf</span>
          <span class="file-meta">3.1 MB • Subido hace 1 semana</span>
        </div>
        <div class="file-actions">
          <button class="btn-file-action" title="Descargar">
            <svg width="16" height="16" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
            </svg>
          </button>
          <button class="btn-file-action" title="Eliminar">
            <svg width="16" height="16" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
            </svg>
          </button>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .pieces-list {
    background: white;
    border: 1px solid #e5e7eb;
    border-radius: 8px;
    padding: 20px;
    margin-top: 24px;
  }

  .pieces-title {
    font-size: 16px;
    font-weight: 600;
    color: #111827;
    margin-bottom: 16px;
  }

  .pieces-grid {
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .piece-item {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 12px;
    background: #f9fafb;
    border-radius: 6px;
  }

  .piece-info {
    display: flex;
    flex-direction: column;
    gap: 4px;
  }

  .piece-status {
    font-size: 12px;
    font-weight: 600;
    text-transform: uppercase;
  }

  .piece-status.completed { color: #065f46; }
  .piece-status.in-progress { color: #92400e; }
  .piece-status.pending { color: #6b7280; }

  .piece-progress {
    font-size: 14px;
    font-weight: 600;
    color: #374151;
  }
</style>