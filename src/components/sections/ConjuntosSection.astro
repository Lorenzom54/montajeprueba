import TableConjunto from '../table/TableConjunto.astro';
import ConjuntoDetail from '../detail/ConjuntoDetail.astro';

// Datos de ejemplo - en una aplicación real vendrían de una API
const conjuntos = [
  {
    id: "001",
    nombre: "Estructura Principal Bloque A",
    codigo: "CNJ-2024-001",
    obra: "Centro Comercial Plaza Norte",
    numPiezas: 24,
    estado: "En Producción",
    progreso: 65,
