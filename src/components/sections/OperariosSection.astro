---
import PageHeader from '../PageHeader.astro';
import Modal from '../Modal.astro';
import OperariosForm from '../forms/OperariosForm.astro';
import DetailModal from '../DetailModal.astro';
import OperarioDetail from '../detail/OperarioDetail.astro';
---

<PageHeader 
  title="Gestión de Operarios" 
  subtitle="Control de personal y asignación de tareas"
  actionButton={{ text: "Nuevo Operario", onClick: "openModal('modal-nuevo-operario')" }}
/>

<div class="operarios-section">
  <div class="stats-grid">
    <div class="stat-card">
      <div class="stat-icon total">
        <svg width="24" height="24" fill="none" viewBox="0 0 24 24" stroke="currentColor">
